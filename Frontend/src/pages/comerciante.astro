---
import { AreaChartInteractive } from "../components/chartArea";
import { BarAreaComponent } from "../components/barArea";
import { PieChartComponent } from "../components/pieChart";
import MainLayout from "../layouts/main.astro";

import "../styles/global.css"; // Aquí importas tu CSS global

const content = { title: "Inicio - Deuna" };
---

<MainLayout content={content}>
    <body>
        <div class="botones">
            <button class="btn btn-primario">Meta Conseguida</button>
            <button class="btn btn-seundario">Meta Pendiente</button>
            <button class="btn btn-terciario">Meta Fallida</button>
        </div>
        <div class="chart-container chart-top">
            <AreaChartInteractive client:load />
        </div>
        <div class="chart-container">
            <BarAreaComponent client:load />
        </div>
        <div class="chart-container">
            <PieChartComponent client:load />
        </div>
    </body>
</MainLayout>

<style>
    /* Contenedor para los botones */
    .botones {
        display: flex;
        gap: 40px;
    }

    /* Estilos base para todos los botones */
    .btn {
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        font-weight: 600;
        border: none;
        border-radius: 0.25rem;
        cursor: pointer;
        margin-left: auto;
        margin-right: auto;
        transition:
            background-color 0.2s ease,
            box-shadow 0.2s ease;
    }

    .btn:hover {
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.15);
    }

    /* Botón primario */
    .btn-primario {
        background-color: #70ff60;
        color: #fff;
    }

    .btn-primario:hover {
        background-color: #41ff2c;
    }

    /* Botón secundario */
    .btn-secundario {
        background-color: #d4d4d4;
        color: #333;
    }

    .btn-secundario:hover {
        background-color: #bbb;
    }

    /* Botón terciario */
    .btn-terciario {
        background-color: #f5f5f5;
        color: #444;
        border: 1px solid #ccc;
    }

    .btn-terciario:hover {
        background-color: #e1e1e1;
    }

    .chart-container {
        width: 60%; /* Ajusta este valor a tu preferencia */
        height: auto; /* Ajusta este valor a tu preferencia */
        margin-bottom: 1rem; /* Separación entre gráficos */
        margin-left: auto;
        margin-right: auto;
    }

    .chart-top {
        padding-top: 25px;
    }

    /* Esta regla asegura que los componentes de gráficos ocupen todo el contenedor */
    .chart-container :global(svg),
    .chart-container :global(canvas),
    .chart-container :global(.recharts-wrapper) {
        width: 100% !important;
        height: 100% !important;
    }
</style>
